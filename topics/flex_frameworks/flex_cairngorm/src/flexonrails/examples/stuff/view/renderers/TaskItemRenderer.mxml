<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" height="60" mouseOver="showControls()" mouseOut="hideControls()">
	<mx:Script>
	<![CDATA[
		import flexonrails.examples.stuff.vo.Task;
		
		[Bindable]
		private var task:Task;
		
		override public function set data(value:Object):void {
			super.data = value;
			task = data as Task;
		}
		
		private function showControls():void {
			
		}
		
		private function hideControls():void {
			
		}
		
	]]>
	</mx:Script>
	
	<mx:HBox width="100%">
		<mx:Label id="taskLable" fontSize="12" fontWeight="bold" text="{task.label}" />
		<mx:Spacer width="100%" />
		<mx:CheckBox id="completeCheckbox" selected="{task.completedOn != null}" />
	</mx:HBox>
	<mx:Button id="editButton" label="edit" />
	
</mx:VBox>
