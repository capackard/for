<h1>Listing raffles</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Closed</th>
  </tr>

<% for raffle in @raffles %>
  <tr>
    <td><%=h raffle.name %></td>
    <td><%=h raffle.closed %></td>
    <td><%= link_to 'Show', raffle %></td>
    <td><%= link_to 'Edit', edit_raffle_path(raffle) %></td>
    <td><%= link_to 'Destroy', raffle, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New raffle', new_raffle_path %>
